<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project1">

    <uses-sdk android:targetSdkVersion="21" />
    <!-- 允许录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 允许播放SD文件 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name="volley.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.itingshuo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.itingshuo.MovieActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:label="@string/title_activity_movie"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.itingshuo.ChooseActivity"
            android:label="@string/title_activity_choose" >
        </activity>
       <!-- <activity
            android:name="com.example.itingshuo.MainActivity"
            android:label="@string/title_activity_movie" >
        </activity>-->
        <activity
            android:name="com.example.itingshuo.ToneListActivity"
            android:label="@string/title_activity_movie" >
        </activity>

        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.example.itingshuo.TaiciActivity"
            android:label="@string/title_activity_taici" >
        </activity>
        <activity
            android:name="com.example.itingshuo.ToneActivity"
            android:label="@string/title_activity_tone" >
        </activity>
        <activity
            android:name="com.example.itingshuo.SpeakActivity"
            android:label="@string/title_activity_speak" >
        </activity>
        <activity
            android:name="com.example.itingshuo.MovieListActivity"
            android:label="@string/title_activity_movie_list" >
        </activity>
        <activity
            android:name="com.example.itingshuo.SpeakListActivity"
            android:label="@string/title_activity_speak_list" >
        </activity>
        <activity
            android:name="com.example.itingshuo.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>